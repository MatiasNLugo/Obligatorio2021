<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewseventos.DetalleEventoActivity"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imvAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/evento_1" />
    <TextView
        android:id="@+id/tvIdEvento"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imvAvatar"
        android:text="Id: 345667"/>
    <TextView
        android:id="@+id/tvTitulo"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:layout_below="@id/tvIdEvento"/>
    <TextView
        android:id="@+id/tvFecha"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitulo"
        android:text="Fecha"
        />
    <TextView
        android:id="@+id/tvHora"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFecha"
        android:text="Hora"/>
    <TextView
        android:id="@+id/tvDuracion"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHora"
        android:text="Duracion: 160 hs"/>
    <TextView
        android:id="@+id/tvTipo"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDuracion"
        android:text="Tipo: Familiar"/>
    <TextView
        android:id="@+id/tvAsistetes"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTipo"
        android:text="Numero de asistentes: 15"/>

    <TextView
        android:id="@+id/tvIdCliente"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAsistetes"
        android:text="Cliente ID: 35"/>
    <TextView
        android:id="@+id/tvNombreCliente"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvIdCliente"
        android:text="Nombre: Nombre del cliente"/>



</RelativeLayout>
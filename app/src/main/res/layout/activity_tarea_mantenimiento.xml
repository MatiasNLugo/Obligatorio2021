<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/botones"
    tools:context=".viewTareas.TareaMantenimientoActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAgregarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:backgroundTint="@color/botones"
        app:srcCompat="@drawable/ic_add"
        android:onClick="btnOnClickAgregarReunion"
        app:tint="@color/black" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frmListadoTareas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.matiaslugo.obligatorio2021.viewTareas.ListadoTareaFragment"
        tools:layout="@layout/list_item_tarea"/>

</RelativeLayout>
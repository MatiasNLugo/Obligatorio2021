<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".viewreuniones.DetalleReunionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/list_item_backgraund"
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:textSize="@dimen/tamanio_texto"
                android:text="ID :"/>
            <TextView
                android:id="@+id/tvIdReunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:textSize="@dimen/tamanio_texto"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:textSize="@dimen/tamanio_texto"
                android:text="Objetivo :"/>
            <TextView
                android:id="@+id/tvObjetivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_b"
                android:textSize="@dimen/tamanio_texto"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:textSize="@dimen/tamanio_texto"
                android:text="DescripciÃ³n :"/>
            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_b"
                android:textSize="@dimen/tamanio_texto"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:textSize="@dimen/tamanio_texto"
                android:text="Fecha :"/>
            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_b"
                android:textSize="@dimen/tamanio_texto"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:textSize="@dimen/tamanio_texto"
                android:text="Hora :"/>
            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_b"
                android:textSize="@dimen/tamanio_texto"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:textSize="@dimen/tamanio_texto"
                android:text="Lugar :"/>
            <TextView
                android:id="@+id/tvLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_b"
                android:textSize="@dimen/tamanio_texto"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:textSize="@dimen/tamanio_texto"
                android:text="Notificar al cliente :"/>
            <TextView
                android:id="@+id/tvNotificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_b"
                android:textSize="@dimen/tamanio_texto"
                android:layout_marginLeft="@dimen/activity_vertical_margin" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
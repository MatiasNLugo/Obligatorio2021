<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="16dp"
    android:background="@drawable/list_item_backgraund"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ID del cliente: "
            android:textColor="@color/color_funte_oscuro"
            android:fontFamily="@font/segoe"
            android:textSize="18dp"/>
        <TextView
        android:id="@+id/tvIdCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_b"
            android:textColor="@color/color_funte_oscuro"
        android:layout_marginTop="4dp"
        android:text="Este es El ID"
        android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/color_funte_oscuro"
            android:fontFamily="@font/segoe"
            android:text="Rut/Nombre: "
            android:textSize="18dp"/>
        <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/segoe_b"
            android:textColor="@color/color_funte_oscuro"
        android:layout_marginBottom="4dp"
        android:text="ElNombre va aca"
        android:textSize="18dp"/>
    </LinearLayout>


</LinearLayout>